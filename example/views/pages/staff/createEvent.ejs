<%- include ('./../../partials/staffHeader') %>


<div class="fullScreen" id="createEventPage">
    <form action="/staff/scheduleEvent" onsubmit="event.preventDefault(); seeEventPresetFormValues('#popupEvent');" method="POST">
        <h1>Create a New Event Preset</h1>
        <hr>
        <form action="/">
            <label for="eventName">Event Name: </label> <input type="text" name="eventName" id="eventName" placeholder="Event Name" required>
            <br>
            <label for="eventLocation">Event Location: </label> <input type="text" name="eventLocation" id="eventLocation" placeholder="Event Location" required>
            <br>
            <div id="textareaContainer">
                <label for="eventDesc">Event Description: </label> <textarea name="eventDesc" id="eventDesc" cols="30" rows="10"></textarea>
            </div>

            <input type="submit" value="Create Event" class="greenBG">
        </form>
    </form>
</div>

<div id="popupEvent" class="popup">
    <div id="popupContent" class="popupContent">
        <h3 id="newEventName"></h3>
        <p>Location: <span id="newEventLocation"></span></p>
        <p>Description: <span id="newEventDesc"></span></p>
        <div>
            <button class="redBG" onclick="hidePopup('#popupEvent')">Cancel</button>
            <button class="greenBG" onclick="createTheEvent()">Create Event</button>
        </div>
    </div>
</div>

