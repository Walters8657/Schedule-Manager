<%- include ('./../../partials/staffHeader') %>

<div id="createAccount" class="fullScreen">
    <h2>Create New Account</h2>
    <hr>
    <form action="/staff/createAccount" onsubmit="event.preventDefault(); seeCreateAccountFormValues('#popup', <%= usernames %>);"method="POST">
        <label for="fname">First Name: </label> <input type="text" name="fname" id="fname" placeholder="First Name" required>
        <br>
        <label for="lname">Last Name: </label> <input type="text" name="lname" id="lname" placeholder="Last Name" required>
        <br>
        <label for="birthDate">Birthdate: </label> <input type="date" name="birthDate" id="birthDate" required>
        <br>
        <label for="permissions">Permissions: </label>
            <select name="permissions" id="permissions" required>
                <option value="child">Child</option>
                <option value="lowStaff">Lower Staff</option>
                <option value="upStaff">Upper Staff</option>
                <option value="sysOverseer">System Overseer</option>
            </select>
        <br>
        <label for="gender">Gender: </label>
            <select name="gender" id="gender" required>
                <option value="other">Other</option>
                <option value="male">Male</option>
                <option value="female">Female</option>
            </select>
        <br><br>

        <h6>Leave Username and/or password blank to auto generate</h6>
        <br>
        <label for="username">Username: </label> <input type="text" name="username" id="username" placeholder="Username">
        <label for="password">Password: </label> <input type="password" name="password" id="password" placeholder="Password">

        <input type="submit" value="Create Account" class="greenBG">

    </form>
</div>

<div id="popup" class="popup">
    <div id="popupContent" class="popupContent">
        <h3 id="newUserName"></h3>
        <h5 id="newUserPermissions"></h5>
        <p>Birthday: <span id="newUserBirthday"></span></p>
        <p>Username: <span id="newUserUsername"></span></p>
        <p>Password: <span id="newUserPassword"></span></p>
        <div>
            <button class="redBG" onclick="hidePopup('#popup')">Cancel</button>
            <button class="greenBG" onclick="createAccount()">Create Account</button>
        </div>
    </div>
</div>
<%- include ('./../../partials/footer') %>
